<p style="color: green"><%= notice %></p>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h2><%= @person.salutation %> <%= @person.first_name %> <%= @person.middle_name %> <%= @person.last_name %>  </h2>
      <ul style="list-style-type: none">
        <li>Social Security Number: <%= @person.ssn %></li>
        <li>Birthday: <%= @person.birth_date %></li>
        <li>Comments:<%= @person.comment %></li>
      </ul>
      <div style="display: flex; justify-content: center;">
        <%= link_to "Edit", edit_person_path(@person), :class => 'btn btn-warning btn-sm'%>
        <%= button_to "Delete this person", @person, method: :delete, :class => 'btn btn-danger btn-sm', :style=> "margin-left: 5px"%>
      </div>
    </div>
    <div class="col">
      <h2>Number</h2>
      <% @person.numbers.each do |number| %>
        <p>
          <strong>Phone Numbers:</strong>
          <%= number.phone_number %>
        </p>
        <p>
          <strong>Comments:</strong>
          <%= number.commment %>
        </p>
        <p>
          <%= link_to "Delete Number", [number.person, number], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
        </p>
        <%= link_to "Edit", edit_person_number_path(@person), :class => "btn btn-warning btn-sm"%>
      <% end %>
      <%= link_to "Create", new_person_number_path(@person), :class => "btn btn-success btn-sm"%>
    </div>
    <div class="col">
      <h2>Email</h2>
      <% @person.emails.each do |email| %>
        <p>
          <strong>Emails:</strong>
          <%= email.email %>
        </p>
        <p>
          <strong>Comments:</strong>
          <%= email.comment %>
        </p>
        <p>
          <%= link_to "Delete Email", [email.person, email], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
        </p>
        <%= link_to "Edit", edit_person_email_path(@person), :class => "btn btn-warning"%>
      <% end %>
      <%= link_to "Create", new_person_email_path(@person), :class => "btn btn-success"%>
    </div>
    <div class="col">
      <h2>Address</h2>
      <% @person.addresses.each do |address| %>
        <p style="margin-top:20px">
          <strong>street:</strong>
          <%= address.street %>
        </p>
        <p>
          <strong>Town:</strong>
          <%= address.town %>
        </p>
        <p>
          <strong>Zipcode:</strong>
          <%= address.zipcode %>
        </p>
        <p>
          <strong>State:</strong>
          <%= address.state %>
        </p>
        <p>
          <strong>Country:</strong>
          <%= address.country %>
        </p>
        <p>
          <%= link_to "Delete Address", [address.person, address], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
        </p>
        <%= link_to "Edit", edit_person_address_path(@person), :class => "btn btn-warning"%>
      <% end %>
      <%= link_to "Create", new_person_address_path(@person), :class => "btn btn-success"%>
    </div>
  </div>

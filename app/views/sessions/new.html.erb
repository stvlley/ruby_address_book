
<div class="container text-center">
<h1>Log In</h1>
<%= form_with(url: sessions_path, method: :post) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true %>
  </div>
  <div style="margin-right: 30px">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div style="padding-top: 10px">
    <%= f.submit "Log In" %>
  </div>
<% end %>